<Window x:Class="Dip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация"
        Height="450" Width="400"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Grid Background="#F0F2F5">
        <!-- Карточка с формой -->
        <Border Background="White" CornerRadius="10" Padding="20" Width="350" Height="380"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                BorderBrush="#DDDDDD" BorderThickness="1"
                >

            <StackPanel>
                <TextBlock Text="Вход в систему"
                           FontSize="22" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="#333333" Margin="0,0,0,15"/>

                <!-- Поле Логин -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Логин" FontSize="14" Foreground="Gray" Margin="5,0,0,3"/>
                    <TextBox x:Name="LoginTextBox"
                             Height="40"
                             Padding="5"
                             BorderBrush="#007ACC"
                             BorderThickness="1"
                             />
                </StackPanel>

                <!-- Поле Пароль -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Пароль" FontSize="14" Foreground="Gray" Margin="5,0,0,3"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="40"
                                 Padding="5"
                                 BorderBrush="#007ACC"
                                 BorderThickness="1"
                                 />
                </StackPanel>

                <!-- Кнопка Войти -->
                <Button Content="Войти"
                        Click="LoginButton_Click"
                        Height="48"
                        Background="#007ACC"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        
                        Margin="0,10,0,0"
                        />
            </StackPanel>
        </Border>
    </Grid>
</Window>